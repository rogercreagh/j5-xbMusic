		<field name="albumlist" type="subform"
			label="Album"
			description="Track may appear on more than one album - eg original and greatest hits or compilation"			
			multiple="true" min= "0" max= "10"
			buttons="add,remove"
			layout="joomla.form.field.subform.repeatable-table"
