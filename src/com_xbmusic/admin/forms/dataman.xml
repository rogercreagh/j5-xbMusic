<form>
	<fieldset name="import" label="Import Settings"
addfieldprefix="Crosborne\Component\Xbmusic\Administrator\Field" 
	>	
		<field name="foldername" type="text"
			label="Selected Folder"
			description=""
			readonly="false"
			size="80"
		/>
		<field name="filepathname" type="textarea"
			label="Selected Files"
			description="Selected files will be cleared by closing folder"
			readonly="false"
			size="80"
			rows="6"
		/>
		<field
			name="defcat_track" type="xbsubcat"
			label="Category for Imported Tracks"
			description="XBCONFIG_CAT_DEF_DESC"
			extension="com_xbmusic"
			useglobal="true"
			>	
			<option value="-1">Use Genre as category</option>		
		</field>
		
		<field name="errlist" type="editor"
			label="Parsing Errors" description="Most recent at the bottom, delete the ones you've dealt with."
			class="inputbox" 
			filter="ComponentHelper::filterText"  buttons="false" 
			
		/>
		<field name="warnlist" type="editor"
			label="Parsing Warnings" description="Most recent at the bottom, delete the ones you've dealt with."
			class="inputbox" 
			filter="ComponentHelper::filterText"  buttons="false" 
			
		/>
		
	
	</fieldset>
</form>